#!/bin/sh

[ $OPENWRT_REV -ge 44482 -a $OPENWRT_REV -lt 45362 ] && {
	logger -s -- "$0: mv() repairing https://dev.openwrt.org/ticket/19432"

	cat <<EOF
mv()
{
	case "\$1" in
		'/tmp'*|'/database'*)
			/bin/mv "\$1" "\$2"
			return \$?
		;;
	esac

	case "\$2" in
		'/tmp'*|'/database'*)
			/bin/mv "\$1" "\$2"
			return \$?
		;;
	esac

	cp \$1 /tmp/mv_\$$
	rm \$1
	cp /tmp/mv_\$$ \$2
	rm /tmp/mv_\$$
}
EOF
}
